{
  "name": "argblazer",
  "displayName": "ArgBlazer",
  "description": "Convert YAML files representing argumentation frameworks into HTML reports using Geist",
  "publisher": "CIRSS",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/xai-ca/argblazer.git"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Linters"
  ],
  "keywords": [
    "Formal Argumentation",
    "Argumentation Framework",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "argBlazer.generateReport",
        "title": "Generate ArgBlazer Report to the right",
        "icon": {
          "light": "media/button-light.png",
          "dark": "media/button-dark.png"
        }
      },
      {
        "command": "argBlazer.refreshPythonInterpreter",
        "title": "Refresh Python Interpreter",
        "category": "ArgBlazer"
      },
      {
        "command": "argBlazer.exportHtml",
        "title": "Export as HTML",
        "category": "ArgBlazer"
      },
      {
        "command": "argBlazer.about",
        "title": "About ArgBlazer",
        "category": "ArgBlazer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "argBlazer.generateReport",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "argBlazer.exportHtml",
          "when": "webviewId == afReport",
          "group": "navigation"
        },
        {
          "command": "argBlazer.about",
          "when": "webviewId == afReport",
          "group": "about"
        }
      ]
    },
    "configuration": {
      "title": "ArgBlazer",
      "properties": {
        "argBlazer.pythonInterpreter": {
          "type": "string",
          "default": "",
          "description": "Path to Python interpreter with geist package installed (required)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/js-yaml": "^4.0.5",
    "typescript": "^4.9.4"
  }
} 